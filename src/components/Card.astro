---
interface Props {
	image: string;
	body: string;
	perks: {
		amount: string;
		title: string;
	}[];
}

const { image, body, perks } = Astro.props;
---
<div class="card rounded-xl shadow-md">
	<div class="relative h-80 w-80 overflow-hidden rounded-lg">
		<img src={image} alt="gen-in" class="absolute inset-0 rounded-md">
	</div>
	<div class="card-body p-3">
		<div class="flex gap-7 mb-3">
			<span>
				<h1 class="text-2xl font-semibold">
					{perks[0].amount}
				</h1>
				<p class="text-sm font-semibold">
					{perks[0].title}
				</p>
			</span>
			<span>
				<h1 class="text-2xl font-semibold">
					{perks[1].amount}
				</h1>
				<p class="text-sm font-semibold">
					{perks[1].title}
				</p>
			</span>
			<span>
				<h1 class="text-2xl font-semibold">
					{perks[2].amount}
				</h1>
				<p class="text-sm font-semibold">
					{perks[2].title}
				</p>
			</span>
		</div>
		<p class="text-gray-500 mb-2 line-clamp-4">
			{body}
		</p>
		<button onclick="alert('coming soon ðŸ˜‰')" class="px-4 text-white bg-[#1BEEDC] rounded-md py-2 flex w-full justify-center gap-4">
			Apply now
		</button>
	</div>
</div>
