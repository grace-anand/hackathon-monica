<style>
  h1 {
    font-weight: 700;
  }

  .listContainer {
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    background-color: #0d8082;
    display: flex;
    height: fit-content;
    flex-direction: column;
    flex-wrap: wrap;
    gap: 15px;
    padding: 25px;
    height: 80vh;
  }

  .item {
    text-decoration: none;
    color: black;
    display: flex;
    padding: 20px;
    gap: 10px;
    background-color: white;
    border-radius: 10px;
  }

  .iconcontainer {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: #f2f2f2;
    background-blend-mode: lighten;
  }

  .menuName {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: bold;
  }

</style>